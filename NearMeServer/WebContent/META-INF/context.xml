<Context>
    <WatchedResource>WEB-INF/web.xml</WatchedResource>
	<Resource
		name="jdbc/database"
		auth="Container"
		type="javax.sql.DataSource" 
		maxActive="100"
		maxIdle="30"
		maxWait="10000"
		username="nearme"
		password="nearme"
		removeAbandoned="true"
		autoReconnect="true"
		logAbandoned="true"
		validationQuery="select 1"
		driverClassName="com.mysql.jdbc.Driver"
		url="jdbc:mysql://localhost:3306/nearme?autoReconnect=true"/>
</Context>
